.content{
  display: flex;
  flex-direction: column;
}
.title{
  height:60px;
  line-height:60px;
  display: flex;
  justify-content: center;
  font-size:18px;
  color:#c9c9c9;
}
.picker{
  display: flex;
  justify-content: center;
  height:40px;
  line-height:40px;
}
.picker .btn-text{
    font-size:15px;
    border:1px solid #ccc;
    padding:0 7px;
    border-radius: 7px;
    color:#c9c9c9;
}
.img{
  height:300px;
  margin:20px 0  0;
 
}
.footer{
  display: flex;
  justify-content: center;
  height:40px;
  line-height:40px;
  font-size:14px;
  color:#c9c9c9;
}
